@page "/identity/account/register"
@layout AuthenticationLayout

<div class="container">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">

            <EditForm Enhance Model="User" OnValidSubmit="HandleRegistration">
                <DataAnnotationsValidator />
                <div class="card d-flex justify-content-center" style="margin-top: 30%; border-radius: 10px; ">
                    <div class="card-header text-center fs-5">
                        "Fill this Form to Register"
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-sm-4"></div>
                                <div class="col-lg-4 col-md-4 col-sm-4 d-flex justify-content-center">
                                    <img style="border-radius:20px;" src="/images/images.png" height="50" width="50" alt="X" />

                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-4"></div>
                            </div>

                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label class="form-label">Fullname</label>
                            <InputText @bind-Value="User.Fullname" class="form-control"></InputText>
                        </div>
                        <div class="form-group mt-3">
                            <label class="form-label">Email</label>
                            <InputText @bind-Value="User.Email" class="form-control"></InputText>
                        </div>
                        <div class="form-group mt-3">
                            <label class="form-label">Password</label>
                            <input type="password" @bind="User.Password" class="form-control" />
                        </div>
                        <div class="form-group mt-3">
                            <label class="form-label">Confirm Password</label>
                            <input type="password" @bind="User.ConfirmPassword" class="form-control" />
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-8">
                                <span class="text-center">
                                    Have account already? |  <a href="identity/account/login" class="btn-link">Sign In</a>
                                </span>
                            </div>
                            <div class="col-4">
                                <div class="form-group mt-3">
                                    <button class="btn float-end" type="submit">Register</button>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <ValidationSummary />
                            </div>
                        </div>
                    </div>
                </div>
            </EditForm>

        </div>
        <div class="col-lg-3"></div>
    </div>
</div>

@code {
    Register User = new();

    async Task HandleRegistration()
    {
        var result = await accountService.CreateAsync(User);
        if (result.Flag)
        {

            User = new();
            NavManager.NavigateTo("identity/account/login", forceLoad: true);

        }

    }
}