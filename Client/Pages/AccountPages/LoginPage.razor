@page "/identity/account/login"
@layout AuthenticationLayout

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="row w-100">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <EditForm Model="User" OnValidSubmit="HandleLogin">
                <DataAnnotationsValidator />
                <div class="card " style="border-radius: 10px; font-family: bold;">
                    <div class="card-header text-center fs-5 mb-2 ">
                        <div class="row">
                            <div class="col-lg-4 col-md-4 col-sm-4"></div>
                            <div class="col-lg-4 col-md-4 col-sm-4  d-flex justify-content-center">
                                <img style="border-radius:20px;" alt="X" src="/images/images.png" height="50" width="50" />
                            </div>
                            <div class="col-lg-4 col-md-4 col-sm-4"></div>
                        </div>
                        <i class="bi bi-person-circle me-2"></i> Please Login
                    </div>
                    <div class="card-body ">
                        <span style="color:#808080;pointer-events:none">Email : admin@example.com | password : admin123</span>
                        <div class="form-group mt-1 mb-3">
                            <label for="email" class="form-label">E-mail</label>
                            <InputText @bind-Value="User.Email" id="email" class="form-control" placeholder="exam@mail.ru" />
                        </div>

                        <div class="form-group mb-3">
                            <label for="password" class="form-label">Şifre</label>
                            <InputText @bind-Value="User.Password" id="password" type="password" class="form-control" placeholder="••••••••" />
                        </div>

                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-lg-8 col-md-8 col-sm-12">
                                <span class="text-center">
                                    Don`t have account?
                                    <a href="identity/account/register" class="btn-link">Sign Up</a>
                                </span>
                            </div>
                            <div class="col-lg-4 col-md-4 col-sm-12">
                                <div class="d-grid form-group mt-1">
                                    <button type="submit" style="border: 2px solid black" class="btn float-end">
                                        <i class="bi bi-box-arrow-in-right me-2"></i> Login
                                    </button>

                                </div>
                            </div>
                            <div class="col-lg-12">
                                <ValidationSummary />
                            </div>
                        </div>
                    </div>
                </div>
            </EditForm>
        </div>
        <div class="col-lg-3"></div>

    </div>
</div>

@code {

    Login User = new();
    async Task HandleLogin()
    {
        var result = await accountService.SignInAsync(User);
        if (result.Flag)
        {
            var customAuthStateProvider = (CustomAuthenticationStateProvider)AuthStateProvider;
            await customAuthStateProvider.UpdateAuthenticationState(new UserSession()
            {
                Token = result.Token,
                RefreshToken = result.RefreshToken
            });
            NavManager.NavigateTo("/", forceLoad: true);

        }


    }
}
